<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manjunathhampole.database">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/zoo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timing"
            android:label="@string/title_activity_timing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".display_time_listview" />
        <activity
            android:name=".animals"
            android:label="@string/title_activity_animals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".display_animal_listview" />
        <activity
            android:name=".caretaker"
            android:label="@string/title_activity_caretaker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".display_caretaker_listview" />
        <activity
            android:name=".employees"
            android:label="@string/title_activity_employees"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".display_employees_listview" />
        <activity
            android:name=".services"
            android:label="@string/title_activity_services"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".display_service_listview"></activity>
    </application>

</manifest>
